<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.theme.MainActivity"
    android:background="@drawable/fondo_avatar">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAvatars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <!-- Botón de reintento por desconexión -->
    <Button
        android:id="@+id/buttonRetryMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reintentar"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
